<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field="res" type="piramide.interaction.reasoner.web.client.ui.common.Resources"/>
	
	<g:DecoratorPanel>
		<g:VerticalPanel width="100%" spacing="5">
			<g:Cell  horizontalAlignment="ALIGN_CENTER">
				<g:HorizontalPanel spacing="10">
			
					<g:Cell verticalAlignment="ALIGN_MIDDLE">
						<g:Image resource="{res.im}"/>
					</g:Cell>
					
					<g:Cell verticalAlignment="ALIGN_MIDDLE">
						<g:Image resource="{res.ho}"/>
					</g:Cell>
					
					<g:Cell verticalAlignment="ALIGN_MIDDLE">
						<g:Image resource="{res.tep}"/>
					</g:Cell>
		
				</g:HorizontalPanel>
			</g:Cell>
			
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:Label styleName="big-header">IMHOTEP</g:Label>
			</g:Cell>		
		
			<g:Cell horizontalAlignment="ALIGN_CENTER">
				<g:Label styleName="important">PIRAmIDE application builder</g:Label>
			</g:Cell>		
		
		</g:VerticalPanel>
	</g:DecoratorPanel>
	
</ui:UiBinder> 