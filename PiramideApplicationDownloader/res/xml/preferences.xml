<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
 	<PreferenceCategory android:title="Network">
    	<EditTextPreference
	       android:name="BaseURL"
	       android:summary="Server's base URL"
	       android:defaultValue="@string/baseurl_pref_default"
	       android:title="Base URL"
	       android:key="@string/baseurl_pref_name" />
	</PreferenceCategory>
  
 	<PreferenceCategory android:title="Network">
    	 <ListPreference
			  android:title="Profiles"
			  android:summary="Select profile"
			  android:key="@string/profile_pref"
			  android:entries="@array/profile_names"
			  android:entryValues="@array/profile_values" 
			/>
	</PreferenceCategory>
  
</PreferenceScreen>
